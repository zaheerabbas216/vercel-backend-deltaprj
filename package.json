{
  "name": "delta-2-backend",
  "version": "1.0.0",
  "description": "Delta-2 Backend API with MySQL2 - Authentication, RBAC, Customer Management, Employee Management, Order Tracking, and Product Management",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:migrate": "node scripts/migrate.js",
    "db:migrate:rollback": "node scripts/migrate.js --rollback",
    "db:seed": "node scripts/seed.js",
    "db:seed:reset": "node scripts/seed.js --reset",
    "db:reset": "node scripts/reset.js",
    "db:setup": "node scripts/setup.js",
    "db:status": "node scripts/migrate.js --status",
    "logs:clear": "rm -rf storage/logs/* && mkdir -p storage/logs/access storage/logs/error storage/logs/application",
    "setup": "npm install && npm run db:setup",
    "prepare": "husky install",
    "build": "echo 'No build step required for Node.js' && exit 0",
    "health": "node -e \"require('./src/models').initialize().then(console.log).catch(console.error)\""
  },
  "keywords": [
    "nodejs",
    "express",
    "mysql2",
    "authentication",
    "rbac",
    "jwt",
    "yup",
    "api",
    "backend",
    "monolithic",
    "business-modules",
    "sql"
  ],
  "author": "Delta-2 Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "config": "^3.3.9",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.17.3",
    "express-slow-down": "^1.6.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.10.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "mysql2": "^3.6.0",
    "nodemailer": "^6.9.4",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "sharp": "^0.32.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xlsx": "^0.18.5",
    "xss-clean": "^0.1.4",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "eslint-config-node": "^1.6.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-node": "^11.1.0",
    "faker": "^5.5.3",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "lint-staged": "^16.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/utils/constants.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/helpers/testSetup.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/delta-2-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/delta-2-backend/issues"
  },
  "homepage": "https://github.com/your-username/delta-2-backend#readme"
}
