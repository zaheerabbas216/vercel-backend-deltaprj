# =============================================================================
# Delta-2 Backend Environment Configuration
# Copy this file to .env and update with your actual values
# =============================================================================

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_VERSION=v1
APP_NAME=Delta-2 Backend
APP_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database Type: 'sqlite' for development, 'mysql' for production
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=3306
DB_NAME=delta2_backend
DB_USER=root
DB_PASSWORD=your-database-password

# SQLite Configuration (for development)
SQLITE_DB_PATH=./database/delta2_development.sqlite

# MySQL Configuration (for production)
MYSQL_DB_HOST=localhost
MYSQL_DB_PORT=3306
MYSQL_DB_NAME=delta2_production
MYSQL_DB_USER=delta2_user
MYSQL_DB_PASSWORD=your-secure-mysql-password

# Database Connection Pool Settings
DB_POOL_MIN=0
DB_POOL_MAX=10
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# =============================================================================
# JWT AUTHENTICATION CONFIGURATION
# =============================================================================
# JWT Secret (minimum 32 characters for security)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# Refresh Token Configuration
JWT_REFRESH_SECRET=your-refresh-token-secret-key-minimum-32-characters
JWT_REFRESH_EXPIRES_IN=30d

# Password Reset Token Configuration
PASSWORD_RESET_EXPIRES_IN=1h
EMAIL_VERIFICATION_EXPIRES_IN=24h

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email Service Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@delta2.com
EMAIL_FROM_NAME=Delta-2 Backend

# Email Templates
EMAIL_TEMPLATE_DIR=src/templates/email

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3000
FRONTEND_LOGIN_URL=http://localhost:3000/login
FRONTEND_RESET_PASSWORD_URL=http://localhost:3000/reset-password

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_CREDENTIALS=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Upload Limits
UPLOAD_MAX_SIZE=10485760
UPLOAD_MAX_FILES=10

# Allowed File Types
UPLOAD_ALLOWED_TYPES=image/jpeg,image/jpg,image/png,image/gif,application/pdf,text/csv,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# Upload Directories
UPLOAD_DIR=./storage/uploads
UPLOAD_TEMP_DIR=./storage/uploads/temp
UPLOAD_PROFILE_DIR=./storage/uploads/profiles
UPLOAD_PRODUCT_DIR=./storage/uploads/products
UPLOAD_DOCUMENT_DIR=./storage/uploads/documents

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# General Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Authentication Rate Limiting
AUTH_RATE_LIMIT_WINDOW=15
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Password Reset Rate Limiting
PASSWORD_RESET_RATE_LIMIT_WINDOW=60
PASSWORD_RESET_RATE_LIMIT_MAX_REQUESTS=3

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log Levels: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info
LOG_FILE=true
LOG_CONSOLE=true

# Log File Configuration
LOG_DIR=./storage/logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_DATE_PATTERN=YYYY-MM-DD

# Specific Log Files
ACCESS_LOG_FILE=access.log
ERROR_LOG_FILE=error.log
APPLICATION_LOG_FILE=application.log

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_SECRET=your-session-secret-key-minimum-32-characters
SESSION_MAX_AGE=86400000
SESSION_STORE_TYPE=memory

# =============================================================================
# REDIS CONFIGURATION (if using Redis for sessions/caching)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# =============================================================================
# EXTERNAL SERVICES CONFIGURATION
# =============================================================================
# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# AWS S3 Configuration (if using for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Application Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Security Headers
HELMET_ENABLED=true

# Content Security Policy
CSP_ENABLED=true
CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline'

# XSS Protection
XSS_PROTECTION_ENABLED=true

# HSTS Configuration
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000

# =============================================================================
# API DOCUMENTATION
# =============================================================================
# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_TITLE=Delta-2 Backend API
SWAGGER_DESCRIPTION=Comprehensive API documentation for Delta-2 Backend
SWAGGER_VERSION=1.0.0
SWAGGER_CONTACT_NAME=Delta-2 Development Team
SWAGGER_CONTACT_EMAIL=dev@delta2.com
SWAGGER_LICENSE_NAME=MIT
SWAGGER_SERVER_URL=http://localhost:3000

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Development Configuration
DEBUG_ENABLED=true
PRETTY_PRINT_JSON=true

# Testing Configuration
TEST_DB_NAME=delta2_test
TEST_TIMEOUT=30000

# Mock Services (for testing)
MOCK_EMAIL_ENABLED=true
MOCK_SMS_ENABLED=true
MOCK_PAYMENT_ENABLED=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Compression
COMPRESSION_ENABLED=true
COMPRESSION_THRESHOLD=1024

# Request Timeout
REQUEST_TIMEOUT=30000

# Body Parser Limits
BODY_PARSER_LIMIT=50mb
JSON_LIMIT=10mb
URL_ENCODED_LIMIT=10mb

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=./database/backups

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Email Notifications
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false

# Admin Notifications
ADMIN_EMAIL=admin@delta2.com
NOTIFICATION_FROM_EMAIL=notifications@delta2.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Module Feature Flags
CUSTOMER_MODULE_ENABLED=true
EMPLOYEE_MODULE_ENABLED=true
ORDER_MODULE_ENABLED=true
PRODUCT_MODULE_ENABLED=true

# Advanced Features
REAL_TIME_NOTIFICATIONS_ENABLED=false
ANALYTICS_ENABLED=false
AUDIT_LOGGING_ENABLED=true

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# These values should be overridden in production
# NEVER commit actual production values to version control

# Production Database
# DB_TYPE=mysql
# DB_HOST=your-production-db-host
# DB_NAME=delta2_production
# DB_USER=production_user
# DB_PASSWORD=secure-production-password

# Production URLs
# APP_URL=https://api.yourdomain.com
# FRONTEND_URL=https://yourdomain.com
# CORS_ORIGIN=https://yourdomain.com

# Production Security
# JWT_SECRET=ultra-secure-production-jwt-secret-minimum-64-characters-long
# SESSION_SECRET=ultra-secure-production-session-secret-64-characters-long

# Production Email
# EMAIL_HOST=smtp.your-production-email-service.com
# EMAIL_USER=production@yourdomain.com
# EMAIL_PASSWORD=secure-production-email-password